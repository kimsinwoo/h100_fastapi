# SDXL Image Service â€” copy to .env

# Server
HOST=0.0.0.0
PORT=7000

# Models (Hugging Face IDs; commercial-safe)
SDXL_BASE_ID=stabilityai/stable-diffusion-xl-base-1.0
ANIMAGINE_XL_ID=cagliostrolab/animagine-xl-3.0

# GPU
DEVICE=auto
TORCH_DTYPE=bfloat16
ENABLE_TF32=true
ENABLE_XFORMERS=true
ENABLE_VAE_SLICING=true
ENABLE_ATTENTION_SLICING=true
ENABLE_TORCH_COMPILE=false

# Limits
MAX_INFERENCE_STEPS=50
MIN_INFERENCE_STEPS=1
MAX_RESOLUTION=1024
MIN_RESOLUTION=512
GPU_SEMAPHORE_LIMIT=2

# Paths
LORA_ADAPTERS_DIR=data/lora

# CORS
CORS_ORIGINS=*
